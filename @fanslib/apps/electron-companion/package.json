{
  "name": "@fanslib/electron-companion",
  "productName": "FansLib Companion",
  "version": "1.0.0",
  "description": "Companion application for Chrome extension",
  "main": "./out/main/index.js",
  "author": "Galatea Polymorph",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "dist": "bun run build && electron-builder",
    "dist:mac": "bun run build && electron-builder --mac",
    "dist:win": "bun run build && electron-builder --win",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@types/node": "^20.14.8",
    "electron-builder": "^24.13.3",
    "electron-vite": "^5.0.0",
    "typescript": "^5.5.2",
    "vite": "^6.0.0"
  },
  "build": {
    "appId": "com.fanslib.companion",
    "productName": "FansLib Companion",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "out/**/*",
      "node_modules/clip-filepaths*/**/*",
      "!**/.vscode/*",
      "!src/*",
      "!electron.vite.config.{js,ts,mjs,cjs}",
      "!{.eslintignore,.eslintrc.cjs,.prettierignore,.prettierrc.yaml,dev-app-update.yml,CHANGELOG.md,README.md}",
      "!{.env,.env.*,.npmrc,pnpm-lock.yaml}",
      "!{tsconfig.json,tsconfig.node.json}"
    ],
    "asarUnpack": [
      "node_modules/clip-filepaths-win32-x64-msvc/**/*"
    ],
    "win": {
      "executableName": "fanslib-companion",
      "icon": "assets/icons/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "artifactName": "fanslib-companion-${version}-setup.${ext}",
      "shortcutName": "${productName}",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": false,
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    },
    "mac": {
      "identity": null,
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "extendInfo": {},
      "notarize": false
    },
    "dmg": {
      "artifactName": "fanslib-companion-${version}-${arch}.${ext}"
    },
    "compression": "maximum"
  },
  "dependencies": {
    "clip-filepaths": "^0.3.0"
  },
  "optionalDependencies": {
    "clip-filepaths-win32-x64-msvc": "^0.3.0"
  }
}
