{
  "name": "@fanslib/server",
  "version": "1.0.0",
  "private": true,
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./schemas": {
      "types": "./src/schemas.ts"
    },
    "./constants": {
      "types": "./src/constants.ts",
      "import": "./src/constants.ts"
    },
    "./schedule-dates": {
      "types": "./src/features/content-schedules/schedule-dates.ts",
      "import": "./src/features/content-schedules/schedule-dates.ts"
    },
    "./schemas/*": {
      "types": "./src/features/*/schemas/index.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --external playwright --external playwright-core --external ffprobe-static --external fluent-ffmpeg && cp ../../../node_modules/sql.js/dist/sql-wasm.wasm ./dist/",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run dist/index.js",
    "test": "bun test",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write src"
  },
  "dependencies": {
    "@atproto/api": "^0.18.13",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.1",
    "@types/glob": "^9.0.0",
    "date-fns": "^4.1.0",
    "devalue": "^5.5.0",
    "effect": "^3.19.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "glob": "^11.0.3",
    "graphql": "^16.10.0",
    "graphql-request": "^7.1.4",
    "hono": "^4.7.11",
    "playwright": "^1.53.2",
    "reflect-metadata": "^0.2.2",
    "remeda": "^2.32.0",
    "sharp": "^0.34.5",
    "sql.js": "^1.12.0",
    "typeorm": "^0.3.20",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@fanslib/eslint": "workspace:*",
    "@fanslib/typescript": "workspace:*",
    "@types/ffprobe-static": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "bun-types": "^1.2.22",
    "eslint": "^9.35.0",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-prefer-arrow-functions": "^3.9.1",
    "typescript": "^5.9.2"
  }
}
