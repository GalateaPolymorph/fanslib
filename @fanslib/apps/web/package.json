{
  "name": "@fanslib/web",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "docker compose up -d && vite dev",
    "start": "node .output/server/index.mjs",
    "build": "vite build && tsc --noEmit",
    "test": "vitest run",
    "test:ui": "vitest --ui",
