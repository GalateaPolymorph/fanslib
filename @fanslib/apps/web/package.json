    "@trpc/client": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "daisyui": "^5.1.14",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "jotai": "^2.14.0",
    "pg": "^8.16.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "remeda": "^2.32.0",
    "superjson": "^2.2.2",
