{
  "manifest_version": 3,
  "name": "FansLib",
  "version": "2.0.0",
  "description": "Post FansLib content to Fansly with drag-and-drop from your local library",
  "permissions": ["activeTab", "storage", "sidePanel"],
  "host_permissions": ["https://fansly.com/*", "http://localhost:6970/*"],
  "icons": {
    "16": "logo_small.png",
    "48": "logo_small.png",
    "128": "logo_small.png"
  },
  "action": {
    "default_icon": {
      "16": "logo_small.png",
      "48": "logo_small.png",
      "128": "logo_small.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "settings.html",
  "content_scripts": [
    {
      "matches": ["https://fansly.com/*"],
      "js": ["content/fansly-interceptor.js"],
      "run_at": "document_start",
      "world": "MAIN"
    },
    {
      "matches": ["https://fansly.com/*"],
      "js": ["content/fansly-bridge.js"],
      "run_at": "document_start",
      "world": "ISOLATED"
    }
  ],
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  }
}
