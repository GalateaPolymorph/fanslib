{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/**/*",
    "src/preload/api-type.ts",
    "src/features/**/api-type.ts",
    "src/features/**/entity.ts",
    "src/features/**/type.ts",
    "src/features/_common/pagination.ts",
    "src/features/index-renderer.ts",
    "src/features/categories/colors.ts",
    "src/features/channels/channelTypes.ts",
    "src/lib/namespace.ts",
    "src/lib/tail.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
