{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/preload/**/*",
    "src/features/**/*.ts",
    "!src/features/**/renderer.ts",
    "!src/features/**/renderer/**/*.ts",
    "src/lib/database/**/*",
    "src/lib/**/*",
    "src/fixtures/**/*",
    "src/graphql/postpone/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "types": ["electron-vite/node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
