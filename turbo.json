{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "storybook-static/**", ".tanstack/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:headed": {
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "install": {
      "cache": false
    },
    "install-browsers": {
      "cache": false
    },
    "storybook": {
      "cache": false,
      "persistent": true
    }
  },
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "PORT",
    "APPDATA_PATH",
    "LIBRARY_PATH",
    "VITE_API_URL",
    "FFPROBE_PATH"
  ]
}
