{
  "name": "@fanslib/root",
  "devDependencies": {
    "turbo": "^2.5.6",
    "@types/node": "^22.10.5",
    "typescript": "^5.9.2",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.2.19",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:docker": "turbo run dev --parallel --filter='!@fanslib/electron-companion'",
    "start": "turbo run start --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "storybook": "turbo run storybook",
    "clean": "turbo run clean",
    "format": "turbo run format",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run db:generate",
    "db:migrate": "turbo run db:migrate",
    "sync-to-drive": "bun run @fanslib/apps/scripts/sync-to-drive.ts"
  },
  "workspaces": [
    "@fanslib/apps/web",
    "@fanslib/apps/server",
    "@fanslib/apps/chrome-extension",
    "@fanslib/apps/electron-companion",
    "@fanslib/libraries/*",
    "@fanslib/configs/*"
  ],
  "dependencies": {
    "@tanstack/react-router": "^1.161.3",
    "@tanstack/react-router-devtools": "^1.161.3",
    "@tanstack/react-start": "^1.161.3",
    "fkill-cli": "^9.0.0",
    "sqlite3": "^5.1.7",
    "vite-plugin-node-polyfills": "^0.24.0"
  }
}
